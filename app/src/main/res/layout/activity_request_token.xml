<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/layout_bg"
    tools:context=".RequestTokenActivity">
    <EditText
        android:layout_margin="15dp"
        android:layout_centerInParent="true"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:id="@+id/accessTokenEditText"
        android:background="@drawable/text_box"
        android:elevation="2dp"
        android:hint="Access Token"
        />

    <Button
        android:layout_margin="15dp"
        android:layout_below="@+id/accessTokenEditText"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activeAccountButtonid"
        android:text="Active Account"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:padding="10dp"
        android:background="@drawable/button"
        android:textColor="#fff"
        />


    <Button
        android:background="@drawable/button"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/txt2"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/requestKeyButton"
        android:text="Request For Access Token"
        android:textAllCaps="false"
        android:textSize="19sp"
        android:padding="10dp"
        />
    <TextView
        android:id="@+id/txt2"
        android:textAlignment="center"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="You Need An Access Token To Continue"
        />
</RelativeLayout>
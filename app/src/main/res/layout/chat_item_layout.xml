<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/chatItem_ProfileImageviewid"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/profile"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"

        />



    <TextView
        android:textIsSelectable="true"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/white"
        android:id="@+id/receiver_message_TExt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/chatItem_ProfileImageviewid"
        android:background="@drawable/recever_message_layout"
        android:text="Receiver message here"
        android:padding="10dp"
        android:textSize="14sp"
        android:textStyle="bold"
        />
    <TextView
        android:textIsSelectable="true"
        android:layout_marginTop="2dp"
        android:layout_marginRight="50dp"
        android:textColor="@android:color/white"
        android:id="@+id/receiver_message_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/receiver_message_TExt"
        android:layout_toEndOf="@+id/chatItem_ProfileImageviewid"
      android:text="Receiver message here"
        android:padding="10dp"
        android:textSize="10sp"
        android:textStyle="bold"
        />


    <ImageView
        android:id="@+id/message_sender_Imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        />


    <ImageView
        android:id="@+id/message_receiver_Imageview"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="5dp"
        android:scaleType="centerCrop" />

    <TextView
        android:textIsSelectable="true"
        android:layout_marginLeft="50dp"
        android:id="@+id/sender_message_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentTop="@+id/receiver_message_TExt"
        android:background="@drawable/sender_messages_layout"
        android:text="Md Sohrab Hossain Sohel"
        android:textSize="14sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"

        />

    <TextView
        android:layout_marginTop="2dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/sender_message_Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/sender_message_Text"
        android:layout_alignParentTop="@+id/receiver_message_TExt"
        android:text="Md Sohrab Hossain Sohel"
        android:textSize="10sp"
        android:padding="10dp"
        android:textStyle="bold"
        android:textColor="@android:color/white"


        />







</RelativeLayout>